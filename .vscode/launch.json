    "version": "0.2.0",
    "configurations": [
        {
            "name": "MyTools: Google Setup OAuth2",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cli/scripts/main.py",
            "console": "integratedTerminal",
            "args": [
                "--verbose",
                "google",
                "oauth2",
                "--scopes tasks"
            ]
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "MyTools: GitHub Create Repository",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cli/scripts/main.py",
            "console": "integratedTerminal",
            "args": [
                "--verbose",
                "github",
                "repo",
                "create"
            ]
        },
        {
            "name": "MyTools: GitHub List Repositories",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cli/scripts/main.py",
            "console": "integratedTerminal",
            "args": [
                "--verbose",
                "github",
                "repo",
                "list",
                "-c"
            ]
        }
    ]
}